a[data-astrabox]
  text-decoration: none

.astrabox-container
  height: 100%
  background-color: $astra-bg
  width: 100%
  position: fixed
  left: 0
  top: 0
  z-index: 1

.astrabox-inner
  position: absolute
  left: 0
  top: 0
  z-index: 2
  transform: translate(-50%, -50%)

.astrabox-title
  font-size: 20px
  letter-spacing: .8px
  text-align: center
  color: $snow
  margin-bottom: 12px
  font-weight: normal

.astrabox-img
  width: auto
  height: auto

a[data-astrabox]
  text-decoration: none

.astrabox-container
  height: 100%
  background-color: $astra-bg
  width: 100%
  position: fixed
  left: 0
  top: 0
  z-index: 1

.astrabox-inner
  position: absolute
  left: 0
  top: 0
  z-index: 2

.astrabox-title
  font-size: 20px
  letter-spacing: .8px
  position: absolute
  top: -30px
  left: 50%
  transform: translateX(-50%)
  color: $snow
  font-weight: normal
  margin: 0

.astrabox-img
  width: auto
  height: auto
